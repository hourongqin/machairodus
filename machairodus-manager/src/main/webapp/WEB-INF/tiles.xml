<!-- Definitions for Tiles documentation -->
<tiles-definitions>

	<definition name="layout" template="/WEB-INF/layout/template.jsp">
		<put-attribute name="meta" value="/WEB-INF/layout/meta.jsp" />
		<put-attribute name="global_style" value="/WEB-INF/layout/global_style.jsp" />
		<put-attribute name="header" value="/WEB-INF/layout/header.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/layout/sidebar.jsp" />
		<put-attribute name="script" value="/WEB-INF/layout/script.jsp" />
		<put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
	</definition>

	<definition name="main" extends="layout">
		<put-attribute name="content_css" value="/WEB-INF/pages/css/main_css.jsp" />
		<put-attribute name="content" value="/WEB-INF/pages/main.jsp" />
		<put-attribute name="content_js" value="/WEB-INF/pages/js/main_js.jsp" />
	</definition>
</tiles-definitions>